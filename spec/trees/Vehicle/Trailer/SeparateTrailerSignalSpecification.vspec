Trailer:
  type: branch
  description: High-level Trailer data.
#include Trailer/Trailer.vspec Trailer

#
# TSS Versioning information
#
Trailer.VersionTSS:
  type: branch
  description: Supported Version of TSS.
  instantiate: false

Trailer.VersionTSS.Major:
  datatype: uint32
  type: attribute
  default: 1
  description: Supported Version of TSS - Major version.

Trailer.VersionTSS.Minor:
  datatype: uint32
  type: attribute
  default: 0
  description: Supported Version of TSS - Minor version.

Trailer.VersionTSS.Patch:
  datatype: uint32
  type: attribute
  default: 0
  description: Supported Version of TSS - Patch version.

Trailer.VersionTSS.Label:
  datatype: string
  type: attribute
  default: 'dev'
  description: Label to further describe the version.
  comment: COVESA TSS project typically use dev for latest master, and empty string for released versions.

Trailer.TrailerCount:
  datatype: uint8
  type: attribute
  instantiate: false
  description: Number of connected Trailer.
